<configs>
	<!-- meleeToolStoneAxeTazas -->
	<remove xpath="/items/item[@name='meleeToolStoneAxeTazas']" />

	<append xpath="/items">
		<item name="meleeToolStoneAxeTazas">
			<property name="Extends" value="meleeToolStoneAxe"/>
			<property name="Tags" value="knife,melee,light,tool,tazas,perkMotherLode,perkTheHuntsman"/>
			<property name="EconomicValue" value="800"/>
			<property name="CustomIcon" value="meleeToolStoneAxe"/>
			<property name="CustomIconTint" value="ffb0b0"/>
			<property class="Action0">
				<property name="ActionExp" value="4" />
				<property name="ToolCategory.Butcher" value="0" param1="10"/>
				
				<!-- more harvest -->
				<property name="ToolCategory.harvestingTools" value="1" param1="4"/>
			</property>
			<property class="Action1"> <!-- UseAction -->
				<property name="Class" value="Repair"/>
				<property name="Delay" value="0.4"/>
				<property name="Repair_amount" value="350"/>
				<property name="Upgrade_hit_offset" value="-2"/>
				<property name="Sound_start" value="repair_block"/>
				<property name="Allowed_upgrade_items" value="resourceWood,resourceClayLump,resourceSnowBall,resourceScrapIron,resourceForgedIron,resourceForgedSteel,resourceSteelPolish,resourceConcreteMix,resourceCobblestones,resourceYuccaFibers"/>
			</property>
			<effect_group name="Base Effects">
				<passive_effect name="MaxRange" operation="base_set" value="2.4"/>
				<passive_effect name="BlockRange" operation="base_set" value="1000"/>
				<passive_effect name="EntityDamage" operation="base_set" value="12"/> <!-- meleeToolStoneAxeTazas -->
				
				<!-- quality damage bonus -->
				<passive_effect name="EntityDamage" operation="perc_add" value="0,1" tier="1,6"/>
				<passive_effect name="BlockDamage" operation="perc_add" value="0,2" tier="1,6"/>

				<passive_effect name="BlockDamage" operation="base_set" value="1000"/>
				<passive_effect name="AttacksPerMinute" operation="base_set" value="80"/> <!-- A16 .8 -->
				
				<!-- more harvest -->
				<passive_effect name="HarvestCount" operation="base_set" value=".35" tags="butcherHarvest"/>
				<passive_effect name="HarvestCount" operation="base_set" value="1" tags="oreWoodHarvest"/>
				<passive_effect name="HarvestCount" operation="perc_add" value="0,2" tier="1,6"/>
				
				<passive_effect name="DamageModifier" operation="perc_add" value="1" tags="wood"/>
				<passive_effect name="DamageModifier" operation="perc_add" value="1" tags="stone"/>
				<passive_effect name="DamageModifier" operation="perc_add" value="1" tags="earth"/>
				<passive_effect name="DamageModifier" operation="perc_add" value="1" tags="metal"/>
				<passive_effect name="StaminaLoss" operation="base_set" value="8" tags="primary"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7000,14000" tier="1,6"/>
				<passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
				<passive_effect name="ModPowerBonus" operation="perc_add" value=".15" tags="EntityDamage,BlockDamage"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="200" tags="EconomicValue"/>
			</effect_group>
		</item>
	</append>
	
