<configs>
<append xpath="/item_modifiers">
	<item_modifier name="modBlueCanister" installable_tags="flamethrower" modifier_tags="flamethrower" blocked_tags="noMods" type="attachment">
		<property name="EconomicValue" value="440"/>
		<property name="CustomIcon" value="WeaponFlamethrowerBlueCanisterIcon" />
		<property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
		<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
		<!--DamageFalloffRange increased by x meters-->

